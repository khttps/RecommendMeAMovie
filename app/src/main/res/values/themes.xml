<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RecommendMeAMovie" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_grey</item>
        <item name="colorPrimaryVariant">@color/light_grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_bali_hai</item>
        <item name="colorSecondaryVariant">@color/bali_hai</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/dark_grey</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/yantramanav_medium</item>
        <item name="android:itemBackground">@color/dark_grey</item>
    </style>

    <style name="Theme.RecommendMeAMovie.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RecommendMeAMovie.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RecommendMeAMovie.PopupOverlay"
        parent="ThemeOverlay.AppCompat.Light" />

</resources>